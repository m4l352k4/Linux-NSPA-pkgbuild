  "0005-Extend-DAMOS-for-Proactive-LRU-lists-Sorting.patch"
  "0006-misc-fixes.patch"
  "0007-futex-winesync.patch"
  "0008-kbuild-dev-squashed.patch"
  "0011-lrng-patchwork.patch"
  "0012-MG-lru-5.18-patchwork.patch"
  "0014-more-uarches-for-kernel-5.17+.patch"
  "0015-mm-Support-soft-dirty-flag-reset-for-VA-range.patch"
  "0016-mm-Support-soft-dirty-flag-read-with-reset.patch"
  "0017-sched-fair-Compile-out-NUMA-code-entirely-when-NUMA-.patch"
  "0018-x86-Enable-fast-strings-on-Intel-if-BIOS-hasn-t-alre.patch"
  "0019-pinctl-amd-threaded_irqs.patch"
  "0020-designware-i2c_IRQF_NO_THREAD.patch"
  "0021-background_reclaim_of_hugepages.patch"
  "0022-patch-5.18-rt11.patch"
